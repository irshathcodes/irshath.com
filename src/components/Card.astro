---
interface Props {
    title: string;
    description: string;
    createdAt: string;
    link: string;
}
const { title, link, description, createdAt } = Astro.props;
---

<article class="border shadow-md p-5 rounded-lg bg-card text-card-foreground">
    <div class="flex justify-between">
        <a href={link} class="text-lg font-semibold mb-1.5 inline-block"
            >{title}</a
        >
        <span class="text-sm text-muted-foreground">{createdAt}</span>
    </div>
    <p class="mb-2 text-muted-foreground">{description}</p>
    <a href={link}>Read more</a>
</article>
