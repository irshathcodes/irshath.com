---
import BaseLayout from "@/layouts/BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.excerpt}>
    <main class="mt-4 mb-20">
        <div class="text-sm text-muted-foreground mb-2">{frontmatter.date}</div>
        <h1 class="text-2xl font-bold mb-1.5">{frontmatter.title}</h1>
        <p class="text-muted-foreground mb-8">{frontmatter.excerpt}</p>
        <div class="prose dark:prose-invert max-w-full">
            <slot />
        </div>
    </main>
</BaseLayout>
