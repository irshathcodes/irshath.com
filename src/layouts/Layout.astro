---
import "@/styles/tailwind.css";

interface Props {
    title?: string;
}

const { title = "Irshath Codes" } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Irshath portfolio" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="max-w-2xl mx-auto px-6 md:px-0">
        <slot />
    </body>
</html>
<style is:global>
    :root {
    }
    html {
        font-family: system-ui, sans-serif;
    }
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
</style>
